<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project Chunk Stories with Jar-in-Jar Loader">
    <!--this file was created by Eclipse Runnable JAR file Export Wizard-->
    <!--ANT 1.7 is required-->
    <!--define folder properties-->
    <property name="dir.buildfile" value="."/>
    <property name="dir.workspace" value="C:/Users/Hugo/workspace2"/>
    <property name="dir.jarfile" value="${dir.buildfile}"/>
    <target name="create_run_jar">
        <jar destfile="${dir.jarfile}/exporter.jar">
            <manifest>
                <attribute name="Main-Class" value="org.eclipse.jdt.internal.jarinjarloader.JarRsrcLoader"/>
                <attribute name="Rsrc-Main-Class" value="io.xol.chunkstories.importer.AnvilExporter"/>
                <attribute name="Class-Path" value="."/>
                <attribute name="Rsrc-Class-Path" value="./ jinput.jar lwjgl.jar lz4-1.3.0.jar PNGDecoder.jar jorbis.jar json-simple-1.1.1.jar"/>
            </manifest>
            <zipfileset src="jar-in-jar-loader.zip"/>
            <fileset dir="${dir.jarfile}/bin"/>
            <zipfileset dir="${dir.jarfile}/lib/lwjgl/jar" includes="jinput.jar"/>
            <zipfileset dir="${dir.jarfile}/lib/lwjgl/jar" includes="lwjgl.jar"/>
            <zipfileset dir="${dir.jarfile}/lib" includes="lz4-1.3.0.jar"/>
            <zipfileset dir="${dir.jarfile}/lib" includes="PNGDecoder.jar"/>
            <zipfileset dir="${dir.jarfile}/lib" includes="jorbis.jar"/>
            <zipfileset dir="${dir.jarfile}/lib" includes="json-simple-1.1.1.jar"/>
        </jar>
    </target>
</project>
